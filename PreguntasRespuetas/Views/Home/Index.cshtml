@{
    ViewBag.Title = "Home Page";

    int numeroUsuario = ViewBag.NumeroUsuarios;

}
@model PreguntasRespuetas.Models.LoginDTO

<div class="container mt-5">


    <h1 class="display-1">Bienvenido</h1>
    <hr />

    <div class="col-md-12">

        <div class="row">
            <div class="col-md-6">

                <h3 class="display-4">
                    Plataforma en la que podras publicar y responder tus inquietudes.</q>
                </h3>

                <div class="text-center">
                    <img src="~/Content/imagenes/pregunta.png" class="" height="200" />
                </div>
            </div>

            <div class="col-md-6 mt-4">

                @if (numeroUsuario == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        <center>
                            No existen usuarios en la base de datos. <br />
                            ¡Registrate! (Este usuario quedara con el rol de administrador o dueño)

                        </center>
                    </div>

                    <form action="@Url.Action("Index","Home")" method="post">

                        <h3 class="display-5">
                            Registro
                        </h3>

                        <div class="form-group">
                            <label for="usuario">Usuario:</label>
                            <input type="text" class="form-control" name="usuario" placeholder="Ingrese su usuario">
                            @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="clave">Contraseña:</label>
                            <input type="password" class="form-control" name="clave" placeholder="Ingrese su clave">
                            @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mt-4">
                            <input class="btn btn-primary" type="submit" value="Registrarme!" />
                        </div>

                    </form>


                }
                else
                {

            <form action="@Url.Action("Login","Home")" method="post">

                <h3 class="display-5">
                    Identifícate
                </h3>

                <div class="form-group">
                    <label for="usuario">Usuario:</label>
                    <input type="text" class="form-control" name="usuario" placeholder="Ingrese su usuario">
                    @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label for="clave">Contraseña:</label>
                    <input type="password" class="form-control" name="clave" placeholder="Ingrese su clave">
                    @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })

                </div>

                @if (ViewBag.ErrorLogin != null)
                {
                    <div class="alert alert-danger mt-2" role="alert">
                        <center>
                            No se ha podido acceder. Verifica tus datos.
                        </center>
                    </div>
                }


                <div class="form-group mt-4">
                    <input class="btn btn-primary" type="submit" value="Iniciar Sesión" />
                </div>

            </form>


                }



            </div>
        </div>


    </div>

</div>